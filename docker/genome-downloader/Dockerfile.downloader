FROM python:3.9-slim

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    wget \
    curl \
    samtools \
    unzip \
    default-jre \
    && rm -rf /var/lib/apt/lists/*

# We don't need GATK installed here - genome indexing can be done with samtools
# The GATK-specific indexing can be done by the GATK API service when needed

RUN pip install flask requests tqdm

WORKDIR /app

COPY . /app/

CMD ["python", "downloader_api.py"] 